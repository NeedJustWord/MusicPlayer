<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:MusicPlayer.Controls">

    <Style x:Key="DescriptionStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockFont}"/>
    
    <Style x:Key="AboutWindowStyle" TargetType="controls:BaseWindow" BasedOn="{StaticResource BaseWindowStyle}">
        <Setter Property="HaveMenuButton" Value="False"/>
        <Setter Property="HaveMinButton" Value="False"/>
        <Setter Property="HaveMiniStyleButton" Value="False"/>
        <Setter Property="Caption" Value="关于"/>
	    <Setter Property="Height" Value="120" />
        <Setter Property="Width" Value="320" />
        <Setter Property="WindowState" Value="Normal"/>
        <Setter Property="Topmost" Value="True"/>
    </Style>
</ResourceDictionary>